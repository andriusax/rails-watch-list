<h1>Add a movie to <%= @list.name %></h1>

<%= form_with model: [@list, @bookmark], local: true do |f| %>
  <div>
    <%= f.label :movie_id, "Movie" %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <%= f.submit "Add bookmark" %>
<% end %>

<%= link_to "Back to list", list_path(@list) %>
